<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context=".live_data.SuburbLiveActivity">

    <!-- AutoCompleteTextView from both codes -->
    <AutoCompleteTextView
        android:id="@+id/SuburbSpinnerLive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for suburb"
        app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/selectedSuburbTextView" />

    <TextView
        android:id="@+id/selectedSuburbTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Suburb: "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/SuburbSpinnerLive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView or other existing layout components -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/selectedSuburbTextView"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add your existing content here -->

        </LinearLayout>
    </ScrollView>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/SuburbSpinnerLive"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">





            <!-- First CardView (RecyclerView with SwipeRefreshLayout) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                android:background="@color/primary_ColorW"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                        android:id="@+id/swipe_refresh_layout"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_margin="2dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second CardView (SemiCircleArcProgressBar with AQI data) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                android:background="@color/primary_ColorW"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Semi-circle Progress Bar -->
                    <me.bastanfar.semicirclearcprogressbar.SemiCircleArcProgressBar
                        android:id="@+id/semiCircleArcProgressBar"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:progressBarColor="@color/secondaryColorLG"
                        app:progressBarWidth="10"
                        app:progressPlaceHolderColor="@color/accendColorB"
                        app:progressPlaceHolderWidth="10" />

                    <!-- AQI text -->
                    <TextView
                        android:id="@+id/aqiStatusTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/secondaryColorLG"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Separator Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/dividerColor" />

                    <!-- GridLayout for Pollutants (2 rows, 3 columns) -->
                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alignmentMode="alignMargins"
                        android:columnCount="3"
                        android:rowCount="2">

                        <!-- PM2.5 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="PM2.5"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/pm25TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="" />

                            <ProgressBar
                                android:id="@+id/pm25ProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_margin="8dp"
                                android:max="100"
                                android:rotation="270" />
                        </LinearLayout>

                        <!-- PM10 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="PM10"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/pm10TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="" />

                            <ProgressBar
                                android:id="@+id/pm10ProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_margin="8dp"
                                android:max="100"
                                android:rotation="270" />
                        </LinearLayout>

                        <!-- O3 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="O3"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/o3TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="" />

                            <ProgressBar
                                android:id="@+id/o3ProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_margin="8dp"
                                android:max="100"
                                android:rotation="270" />
                        </LinearLayout>

                        <!-- SO2 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="SO2"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/so2TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="" />

                            <ProgressBar
                                android:id="@+id/so2ProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_margin="8dp"
                                android:max="100"
                                android:rotation="270" />
                        </LinearLayout>

                        <!-- CO -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="CO"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/coTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="" />

                            <ProgressBar
                                android:id="@+id/coProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_margin="8dp"
                                android:max="100"
                                android:rotation="270" />
                        </LinearLayout>

                        <!-- NO2 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="NO2"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/no2TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="" />

                            <ProgressBar
                                android:id="@+id/no2ProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_margin="8dp"
                                android:max="100"
                                android:rotation="270" />
                        </LinearLayout>

                    </GridLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Third CardView (LineChart and compare suburb) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:background="@color/primary_ColorW"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Line chart for displaying data -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="281dp" />

                    <!-- Horizontal layout for selecting intervals and comparison -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <Spinner
                            android:id="@+id/intervalSpinner"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp" />

                        <AutoCompleteTextView
                            android:id="@+id/compareSuburb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Compare with..." />
                    </LinearLayout>

                    <!-- Separator Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/dividerColor" />

                    <!-- Button for navigating to historical data -->
                    <Button
                        android:id="@+id/historicalPageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HISTORICAL DATA"
                        android:textColor="@color/primary_ColorW"
                        android:background="@drawable/round_button"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B6A37"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/nav_profile" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/primary_ColorW" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_suburb_live"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/accendColorB"
                app:srcCompat="@drawable/nav_data" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suburb Live"
                android:textColor="@color/accendColorB"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>